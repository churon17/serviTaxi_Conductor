<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutPrincipal"
    android:background="@drawable/taxi"
    tools:context=".Login_1">


    <TextView
        android:id="@+id/txt_conductor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Conductor"
        android:textAlignment="center"
        android:textColor="@color/bottomText"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_above="@id/txt_conductor"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/btnIniciar"
            android:background="@drawable/btn_iniciar_sesion"
            android:textColor="@android:color/white"
            android:text="INICIAR SESION"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnRegistrar"
            android:background="@drawable/btn_registrar"
            android:textColor="@color/colorPrimary"
            android:text="REGISTRAR"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</RelativeLayout>